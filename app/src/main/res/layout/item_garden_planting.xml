<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <com.jetpack.demo.widget.PrettyImageView
                android:id="@+id/image_view_plant"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/shape_image_bg"
                app:shape_type="SHAPE_CIRCLE"
                app:circle_dot_radius="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
        
        <TextView
                android:id="@+id/text_view_plant_name"
                app:layout_constraintTop_toBottomOf="@id/image_view_plant"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        
        <TextView
                android:id="@+id/text_view_plant_water"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_plant_name"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>